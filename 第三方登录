<script type="text/javascript">
$(function()
{
	$("#textadd").focus(function()
	{
		if($(this).val()=="半半注册邮箱")
		{
				$(this).val("")
		}
	
	}).blur(function()
	{
		
			if($(this).val()=="")
		{
				$(this).val("半半注册邮箱")
				
		}
	})
	
	
	$("#textsec").focus(function()
	{
		if($(this).val()=="")
		{
				$(".sec_P").hide();
		}
	
	}).blur(function()
	{
		
			if($(this).val()=="")
		{
				$(".sec_P").show();
				
		}
	})
	

	
	
	
	
})
	
	
